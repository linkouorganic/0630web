  </header>
  <!-- .cd-auto-hide-header -->
  <div class="modal fade" id="myModal">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h4 class="modal-title">維修</h4>
          <button type="button" class="close" data-dismiss="modal">&times;</button>
        </div>
        <div class="modal-body">
          網站試營運，部分功能建構中。
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-danger" data-dismiss="modal">關閉</button>
        </div>
      </div>
    </div>
  </div>

  <!--供應商介面-->
  <div class="container">
    <div class="row" style="justify-content:center;">
      <!--供應商專區分類-->
      <div class="col-sm-12 col-md-3">
        <div class="card supplier-catalog">
          <div class="card-header sup-cata-title">小農專區</div>
          <div class="nav flex-column nav-pills" id="v-pills-tab" role="tablist" aria-orientation="vertical">
            <a class="nav-link active" href="/supplieruser">
              <i class="fas fa-list-alt"></i>訂單清單</a>
            <a class="nav-link" href="/supplieruserpend">
              <i class="fas fa-users"></i>被分配訂單</a>
          </div>
        </div>
      </div>

      <!--內容-->
      <div class="col-sm-12 col-md-8">
        <div class="card">
          <div class="tab-content" id="myTabContent">
            <!--訂單清單-->
            <div class="tab-pane fade show active" id="newOrder" role="tabpanel" aria-labelledby="newOrder-tab">
				<!----------------------->
                <!-- 查詢              -->
                <!----------------------->
                <form class="navbar-form nav navbar-right" role="search" method="get" action="/supplieruserSearch">
                    <div class="form-group mt-2" style="position:absolute;right:90px;">
                        <input type="text" class="form-control" placeholder="廠商名稱 / 部份名稱" id="CusName" name="CusName"/>
                    </div> 
                    <button type="submit" class="btn btn-success mt-2" style="position:absolute;right:40px;">
                        查詢
                    </button>
                </form>
              <!--訂單列表-->
			  <form>
              <h3 class="sup-title">訂單列表</h3>
              <div class="member-panel">
			  <% for(var order=0; order<orderData.length; order++){ %>   
			  <% if(orderData[order].createid=="yulin" | orderData[order].createid=="yabao" |orderData[order].createid=="chouhao" | orderData[order].createid=="chiyuchi"){ %> 
			   <% for(var custom=0; custom<customData.length; custom++){ %>    
					<% if(orderData[order].Custom_CusNo==customData[custom].id){ %>  
			  <p class="accordion">訂單<%= orderData[order].OrdNo %>-<%= customData[custom].CusName %></p>
                <div class="panel" style="overflow:auto;overflow-X:hidden;height:370px;">
                  <!--管理者訂單詳細資料-->
                  <div class="admin-OrderList">
                    <form>
                      <h3 class="form-title">商品資訊</h3>

                      <div class="form-group row">
                        <label>訂單編號:</label>
                        <div class="col-md-2">
                          <p class="pFromDB"><%= orderData[order].OrdNo %></p>
                        </div>
                      </div>

                      <div class="form-group row">
                        <label>訂貨日期:</label>
                        <div class="col-md-3">
                          <p class="pFromDB"><%= myDateFormat(orderData[order].OrdDate) %></p>
                        </div>
                        <label>出貨日期:</label>
                        <div class="col-md-3">
                          <p class="pFromDB"><%= myDateFormat(orderData[order].FinishDate) %></p>
                        </div>
                      </div>

						
                      <div class="form-group row">
					  <table style="width:50%">
						  <tr>
							<th style="border: 1px solid #868e96; font-size:17px ;padding:5px; background-color:#ddd; font-weight:bold">商品名稱</th>
							<th style="border: 1px solid #868e96; font-size:17px ;padding:5px; background-color:#ddd; font-weight:bold">重量</th>
							<th style="border: 1px solid #868e96; font-size:17px ;padding:5px; background-color:#ddd; font-weight:bold">價格</th>
						  </tr>
						  <% for(var orderdetail=0; orderdetail<orderdetailData.length; orderdetail++){ %>        
									
									<% if(orderData[order].OrdNo==orderdetailData[orderdetail].Order_OrdNo){ %>      
						  <tr>
							<td style="border: 1px solid #868e96;padding:2px">
								<% for(var name=0; name<productData.length; name++){ %> 
									<% if(productData[name].ProId==orderdetailData[orderdetail].Product_ProId){ %>    
										<p class="pFromDB"><%= (productData[name].ProName) %></p> 
									<% } %> 
								<% } %> 
							</td>
							<td style="border: 1px solid #868e96;padding:2px"><%= orderdetailData[orderdetail].Quantity*orderdetailData[orderdetail].Weight %>斤</td>
							<td style="border: 1px solid #868e96;padding:2px">$<%= orderdetailData[orderdetail].Quantity*orderdetailData[orderdetail].UnitPrice %></td>
						  </tr>
						  <% } %>   
									
								<% } %>  
					  </table>
					  </div>
					  
					  
                      <h3 class="form-title">顧客資訊</h3>
						
					  <% for(var custom=0; custom<customData.length; custom++){ %>    
					  
						<% if(orderData[order].Custom_CusNo==customData[custom].id){ %>   
								 
						  <div class="form-group row">
							<label>廠商名稱:</label>
							<div class="col-md-2">
							  <p class="pFromDB" style="width:100px"><%= customData[custom].CusName %>    </p>
							</div>
						  </div>

						  <div class="form-group row">
							<label>電話:</label>
							<div class="col-md-3">
							  <p class="pFromDB"><%= customData[custom].Cellphone %>    </p>
							</div>
						  </div>
						  <div class="form-group row">
							<label>地址:</label>
							<div class="col-md-6">
							  <p class="pFromDB"><%= customData[custom].Address %>    </p>
							</div>
						  </div>
					  
						<% } %> 
					  
					  <% } %> 
					  
                    </form>
                  </div>
                </div>
				<% } %> 
				<% } %> 	                           
				<% } %> 
				<% } %> 
                
            </div>
			</form>
			<div class="row">
                <div class="col-md-12">
                    <ul class="pagination">
                        <li>
                            <a>第<%=pageNo%>頁</a>
                        </li>                   

                        <% if(startPage>1){ %>
                            <li>
                                <a href="/supplieruser?pageNo=<%=(startPage-1)%>">上一區段...</a>
                            </li>
                        <% } %> 

                        <% for(var i=startPage; i<startPage+linePerPage; i++) {%>
                            <% if(i<=totalPage){ %>
                                <li>
                                    <a href="/supplieruser?pageNo=<%=i%>"><%=i%></a>
                                </li>
                            <% } %> 
                        <% } %>

                        <% if(startPage+linePerPage<totalPage){ %>
                            <li>
                                <a href="/supplieruser?pageNo=<%=(startPage+linePerPage)%>">...下一區段</a>
                            </li>
                        <% } %>                         
                    </ul>
				
                    
                </div>  
            </div>  
            </div>

          </div>
        </div>
      </div>
    </div>

  </div>


