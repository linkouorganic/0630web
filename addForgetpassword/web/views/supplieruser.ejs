			  <form>
              <h3 class="sup-title">訂單列表</h3>
              <div class="member-panel">
			  <% for(var order=0; order<orderData.length; order++){ %>        
			  <p class="accordion">訂單<%= orderData[order].OrdNo %></p>
                <div class="panel">
                  <!--管理者訂單詳細資料-->
                  <div class="admin-OrderList">
                    <form>
                      <h3 class="form-title">商品資訊</h3>

                      <div class="form-group row">
                        <label>訂單編號:</label>
                        <div class="col-md-2">
                          <p class="pFromDB"><%= orderData[order].OrdNo %></p>
                        </div>
                      </div>

                      <div class="form-group row">
                        <label>訂貨日期:</label>
                        <div class="col-md-3">
                          <p class="pFromDB"><%= myDateFormat(orderData[order].OrdDate) %></p>
                        </div>
                        <label>出貨日期:</label>
                        <div class="col-md-3">
                          <p class="pFromDB"><%= myDateFormat(orderData[order].FinishDate) %></p>
                        </div>
                      </div>

						
                      <div class="form-group row">
					  <% for(var orderdetail=0; orderdetail<orderdetailData.length; orderdetail++){ %>        

							<% if(orderData[order].OrdNo==orderdetailData[orderdetail].Order_OrdNo){ %>                 
								
							<label>商品名稱:</label>
							<div class="col-md-3">
								<% for(var name=0; name<productData.length; name++){ %> 
									<% if(productData[name].ProId==orderdetailData[orderdetail].Product_ProId){ %>    
										<p class="pFromDB"><%= (productData[name].ProName) %></p> 
									<% } %> 
								<% } %> 
							</div>
							<label>重量:</label>
							<div class="col-md-2">
							  <p class="pFromDB"><%= orderdetailData[orderdetail].ProQuantity %>g</p>
							</div>
							<label>價格:</label>
							<div class="col-md-2">
							  <p class="pFromDB">$<%= orderdetailData[orderdetail].Amount %></p>
							</div>	
							
							<% } %>   
							
					  <% } %> 
                      </div>
					  
					  
                      <h3 class="form-title">顧客資訊</h3>
						
					  <% for(var custom=0; custom<customData.length; custom++){ %>    
					  
						<% if(orderData[order].Custom_CusNo==customData[custom].id){ %>   
								 
						  <div class="form-group row">
							<label>廠商名稱:</label>
							<div class="col-md-2">
							  <p class="pFromDB"><%= customData[custom].CusName %>    </p>
							</div>
						  </div>

						  <div class="form-group row">
							<label>電話:</label>
							<div class="col-md-3">
							  <p class="pFromDB"><%= customData[custom].Cellphone %>    </p>
							</div>
						  </div>
						  <div class="form-group row">
							<label>地址:</label>
							<div class="col-md-6">
							  <p class="pFromDB"><%= customData[custom].Address %>    </p>
							</div>
						  </div>
					  
						<% } %> 
					  
					  <% } %> 
					  
                    </form>
                  </div>
                </div>
					                           
				<% } %> 
                
